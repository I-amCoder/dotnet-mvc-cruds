@model IEnumerable<Category>

@{
}

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <h1 class="text-primary">Categories</h1>
        </div>
    </div>
    <div class="row ">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-body">


                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                @foreach (var category in Model)
                                {
                                    <tr>
                                        <td>@category.Name</td>
                                        <td>@category.Description</td>
                                        <td>
                                            <a class="text-warning mx-2">
                                                <i class="fa fa-edit"></i>
                                            </a>

                                            <a class="text-danger mx-2">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
